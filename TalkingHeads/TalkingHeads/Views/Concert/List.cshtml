@model List<Concert>
@{
    ViewBag.Title = "Talking Heads Concerts";
}
<a asp-controller="Concert" asp-action="Add">Add New Concert</a>
<table id="concert_table" class="table table-hover">
    <thead>
        <tr><th>Date</th><th>Venue</th><th>Location</th></tr>
    </thead>
    <tbody>
        @foreach (var concert in Model)
        {
            <tr>
                <td>@concert.Date.ToShortDateString()</td>
                <td>@concert.Venue</td>
                <td>@concert.Location</td>
                <td>
                    <a asp-controller="Concert" asp-action="Edit" asp-route-id="@concert.ConcertId" class="btn btn-primary">Edit</a>
                    <a asp-controller="Concert" asp-action="Delete" asp-route-id="@concert.ConcertId" class="btn btn-primary">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
